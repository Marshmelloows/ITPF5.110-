#book options
book_options = ("alice", "gweto", "sputnic","penis")

#prints books in list 
def book_loader():
    print("}/~~~~~~~~~~~~~~~\{")
    print("|  Avalible books |")
    print("|{===============}|")
    for book in book_options:
       print(f"|   | {book:<12}|")
    print("\_________________/")

